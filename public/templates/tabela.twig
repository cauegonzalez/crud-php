{% extends 'index.twig' %}

{% block titulo %}
    Usuários Cadastrados
{% endblock %}

{% block content %}
<!-- <table class="table table-hover table-condensed"> -->
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                <a href='#'>#</a>
            </th>
            <th>
                <a href='#'>Nome</a>
            </th>
            <th>
                <a href='#'>CEP</a>
            </th>
            <th>
                <a href='#'>Cidade</a>
            </th>
            <th>
                <a href='#'>Estado</a>
            </th>
            <th>
                <a href='#'>Ações</a>
            </th>
        </tr>
    </thead>
    <tbody>
        {% for usuario in template.objUsuario %}
            <tr>
                <td>
                    {{ usuario.id }}
                </td>
                <td>
                    <a href='index.php?id={{ usuario.id }}'>{{ usuario.nome }}</a>
                </td>
                <td>
                    {{ usuario.cep }}
                </td>
                <td>
                    {{ usuario.cidade }}
                </td>
                <td>
                    {{ usuario.uf }}
                </td>
                <td>
                    <button type="button" class="btn btn-primary" onclick="visualizar({{ usuario.id }})"><i class="far fa-eye"></i></button>
                    <button type="button" class="btn btn-info" onclick="editar({{ usuario.id }})"><i class="fas fa-edit"></i></button>
                    <button type="button" class="btn btn-danger" onclick="excluir({{ usuario.id }})"><i class="fas fa-trash-alt"></i></button>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<button type="button" class="btn btn-dark" onclick="cadastrar()" >Novo Usuário</button>
{% endblock %}